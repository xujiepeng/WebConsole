                                            type: 'max',
                                            valueDim: 'close'
                                        }
                                    ]
                                }
                            },
                            {
                                name: 'MA5',
                                type: 'line',
                                data: calculateMA(5),
                                smooth: true,
                                lineStyle: {
                                    normal: { opacity: 0.5 }
                                }
                            },
                            {
                                name: 'MA10',
                                type: 'line',
                                data: calculateMA(10),
